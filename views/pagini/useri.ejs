<!DOCTYPE html>
<html  lang="ro">
    <head>
        <meta name="description" content="E-HomeRecordingStudio  - utilizatori.">
        <meta name="keywords" content="e-home, records, studio, utilizatori">
        <link rel="stylesheet" href="/resurse/css/useri.css" type="text/css" />
        <title>E-HomeRecords - utilizatori</title>
        <%- include("../fragmente/head") %>     
        <script type="text/javascript" src=/resurse/js/produse.js></script>
    </head>
    <body>
    <%- include("../fragmente/header") %>

    <main>
    <div class="afisaj">
        <h2>Useri</h2>

		<table class="table table-hover table-striped table-bordered" id="useri">
		  <tr>
			<th scope="col">id</th><th scope="col">Username</th><th scope="col">Nume</th><th scope="col">Prenume</th><th scope="col">Email</th><th scope="col">Data</th><th scope="col">Rol</th>
		  </tr>

		  <% for (var i = 0; i < useri.length; i++) { 
				if(useri[i].rol=="comun"){
				%>
				<tr>
				  <td scope="row"><%= useri[i].id %></td>
				  <td><%= useri[i].username %></td>
				  <td><%= useri[i].nume %></td>
				  <td><%= useri[i].prenume %></td>
				  <td><%= useri[i].email %></td>
				  <%  
					d=new Date(useri[i].data_adaugare)
					sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
				  %>
				  <td><%=  sir_data %></td>
				   <td><%=  useri[i].rol %></td>
				   <td>
						<form id="form_inreg"  method="post" class="date"  action="/sterge_utiliz"  enctype="multipart/form-data">
							<p>
								<input type="submit" value="Sterge Utilizator" >
								<input type="hidden" value="<%- useri[i].id %>" name="id_utiliz">
								<input type="hidden" value="<%- useri[i].username %>" name="username_utiliz"
							</p>
						</form>
					</td>
				</tr> 
   
				<% } %>			
		  <% } %>
		</table>
		
		<p>Sterge utilizator</p>
		<form id="sterge" method="post" action="/sterge_utiliz">
			<label>
				Id: <input type="text" name="id_utiliz" value="">
			</label>
			
			<input type="submit" value="Submit">
		</form>
	</div>
</main>


    <%- include("../fragmente/footer") %>

</body>
</html>